<layout version="0.1.0">
  <netbanx_payment_index>
    <reference name="root">
      <action method="setTemplate"><template>page/1column.phtml</template></action>
    </reference>
    <reference name="content">
      <block type="page/html" name="netbanx_index" template="netbanx/payment.phtml" />
    </reference>
  </netbanx_payment_index>
  <netbanx_payment_return>
    <reference name="root">
      <action method="setTemplate"><template>netbanx/lightweight.phtml</template></action>
    </reference>
    <reference name="content">
      <block type="page/html" name="netbanx_return" template="netbanx/return.phtml" />
    </reference>
  </netbanx_payment_return>
  <netbanx_payment_success>
    <reference name="root">
      <action method="setTemplate"><template>netbanx/lightweight.phtml</template></action>
    </reference>
    <reference name="content">
      <block type="page/html" name="netbanx_return" template="netbanx/success.phtml" />
    </reference>
  </netbanx_payment_success>
  <netbanx_payment_failure>
    <reference name="root">
      <action method="setTemplate"><template>netbanx/lightweight.phtml</template></action>
    </reference>
    <reference name="content">
      <block type="page/html" name="netbanx_return" template="netbanx/failure.phtml" />
    </reference>
  </netbanx_payment_failure>
</layout>
